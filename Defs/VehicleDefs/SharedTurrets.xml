<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<Vehicles.VehicleTurretDef ParentName="VehicleTurretBase">
		<defName>SharedMGCupola</defName>
		<label>Machine Gun Cupola</label>
		<description>An armoured cupola outfitted with a light machine gun.</description>
		
		<turretType>Rotatable</turretType>
		<shotSound>Shot_Minigun</shotSound>
		<reloadSound>Interact_Rifle</reloadSound>
		
		<projectile>Bullet_LMG</projectile>
		<reloadTimer>2.6</reloadTimer>
		<warmUpTimer>2.5</warmUpTimer>
		<magazineCapacity>25</magazineCapacity>
		<chargePerAmmoCount>0.33</chargePerAmmoCount>
		<genericAmmo>true</genericAmmo>

		<hitFlags>IntendedTarget</hitFlags>
		
		<autoSnapTargeting>false</autoSnapTargeting>
		<rotationSpeed>5.0</rotationSpeed>
		
		<projectileOffset>0.6</projectileOffset>
		<projectileShifting>
			<li>0.15</li>
		</projectileShifting>
		<maxRange>27.9</maxRange>
		<minRange>0.4</minRange>
		
		<recoil>
			<distanceTotal>0.05</distanceTotal>
			<distancePerTick>0.05</distancePerTick>
			<speedMultiplierPostRecoil>0.1</speedMultiplierPostRecoil>
		</recoil>

		<attachProjectileFlag>MJ_HighBullet</attachProjectileFlag>

		<fireModes>
			<li>
				<shotsPerBurst>4</shotsPerBurst>
				<ticksBetweenShots>7</ticksBetweenShots>
				<ticksBetweenBursts>100</ticksBetweenBursts>
				<spreadRadius>0.5</spreadRadius>
				<label>Burst</label>
				<texPath>UI/Gizmos/FireRate_Burst</texPath>
			</li>
			<li>
				<shotsPerBurst>1</shotsPerBurst>
				<ticksBetweenBursts>10</ticksBetweenBursts>
				<spreadRadius>1.5</spreadRadius>
				<label>Automatic</label>
				<texPath>UI/Gizmos/FireRate_Auto</texPath>
			</li>
		</fireModes>
		
		<graphicData>
			<texPath>Things/Vehicles/Shared/SharedMGCupola</texPath>
			<graphicClass>Vehicles.Graphic_Turret</graphicClass>
			<shaderType>CutoutComplexPattern</shaderType>
			<drawSize>(3, 3)</drawSize>
		</graphicData>
		
		<ammunition>
			<thingDefs>
				<li>Steel</li>
			</thingDefs>
		</ammunition>
	</Vehicles.VehicleTurretDef>


