				<work>8000</work>
				<gridCoordinate>(3,20)</gridCoordinate>
				<upgrades>
					<li Class="Vehicles.TurretUpgrade">
						<turrets>
							<li>
								<turretDef>MJ_SharedRocketswarmTurret</turretDef>
								<renderProperties>
									<north>(0, 0.5)</north>
									<south>(0,0.5)</south>
									<east>(0,0.5)</east>
								</renderProperties>
								<gizmoLabel>Rocketswarm launcher</gizmoLabel>
								<aimPieOffset>(0.35, 0)</aimPieOffset>
