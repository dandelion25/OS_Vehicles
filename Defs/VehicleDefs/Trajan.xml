<?xml version="1.0" encoding="utf-8" ?>
<Defs>	

<!-- VehicleBuildDef -->

<Vehicles.VehicleBuildDef ParentName="VehicleBaseBuildable">
    <defName>TrajanBlueprint</defName>
    <label>Trajan</label>
    <!-- TBD <designatorDropdown>MJ_Outlander_VehicleSeriesB</designatorDropdown> -->
    <description>An automated, omnidirectional rolling platform designed to mount a variety of weapons and equipment. While versatile in design, it has limited navigational capabilities and cannot operate outside powered structure grids.\n\n&lt;color=#bb8f04&gt;Crew:&lt;/color&gt; Passenger x1\n&lt;color=#bb8f04&gt;Fuel type:&lt;/color&gt; Chemfuel</description>
    <graphicData>
      <texPath>Things/Vehicles/Trajan/Trajan</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(4,4)</drawSize>
    </graphicData>
	
    <size>(2,2)</size>
	
    <statBases>
      <MaxHitPoints>1000</MaxHitPoints>
      <WorkToBuild>7500</WorkToBuild>
      <Flammability>0.05</Flammability>
    </statBases>
	
    <researchPrerequisites>
      <li>StructureGrids</li>
    </researchPrerequisites>
	
    <constructionSkillPrerequisite>8</constructionSkillPrerequisite>
    <costList>
      <Steel>120</Steel>
      <ComponentIndustrial>4</ComponentIndustrial>
      <ComponentRatcore>1</ComponentRatcore>
    </costList>
    <designationCategory>VF_Vehicles</designationCategory>
    <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
    <thingToSpawn>Trajan</thingToSpawn>
  </Vehicles.VehicleBuildDef>

<!-- VehicleDef -->

	<Vehicles.VehicleDef ParentName="BaseVehiclePawn">
		<defName>Trajan</defName>
		<label>Trajan</label>
		<description>An automated, omnidirectional rolling platform designed to mount a variety of weapons and equipment. While versatile in design, it has limited navigational capabilities and cannot operate outside powered structure grids.\n\n&lt;color=#bb8f04&gt;Crew:&lt;/color&gt; Passenger x1\n&lt;color=#bb8f04&gt;Fuel type:&lt;/color&gt; Chemfuel</description>
		
		<graphicData>
			<texPath>Things/Vehicles/Trajan/Trajan</texPath>
			<graphicClass>Vehicles.Graphic_Vehicle</graphicClass>
			<shaderType>CutoutComplexPattern</shaderType>
			<drawSize>(4,4)</drawSize>
		</graphicData>
		
		<fillPercent>1</fillPercent>
		
		<buildDef>TrajanBlueprint</buildDef>

		<canCaravan>false</canCaravan>
		
		<size>(2, 2)</size>
		
		<vehicleMovementPermissions>NoDriverNeeded</vehicleMovementPermissions>
		<vehicleCategory>Combat</vehicleCategory>
		<techLevel>Industrial</techLevel>
		<vehicleType>Land</vehicleType>
		
		<statBases>
			<ArmorRating_Blunt>0.6</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.9</ArmorRating_Sharp>
			<ArmorRating_Heat>1.0</ArmorRating_Heat>
			<Flammability>0.1</Flammability>
			<MarketValue>650</MarketValue>
		</statBases>
		
		<vehicleStats>
			<Mass>210</Mass>
			<MoveSpeed>5.2</MoveSpeed>
			<CargoCapacity>80</CargoCapacity>
			<RepairRate>2.0</RepairRate>
			<AccelerationRate MayRequire="oskarpotocki.vanillavehiclesexpanded">0.05</AccelerationRate>
		</vehicleStats>
		
		<soundSustainersOnEvent>
			<li>
				<start>IgnitionOn</start><stop>IgnitionOff</stop>
				<value>MJ_EngineNoiseLoopSoft</value>
			</li>
		</soundSustainersOnEvent>

		<soundOneShotsOnEvent Inherit = "False">
			<li><key>PawnEntered</key><value>Shuttle_PawnLoaded</value></li>
			<li><key>PawnExited</key><value>Shuttle_PawnExit</value></li>
			<li><key>IgnitionOn</key><value>MJOscibeep</value></li>
      			<li><key>IgnitionOff</key><value>MJOscibeep2</value></li>
		</soundOneShotsOnEvent>
		
		<race>
			<baseBodySize>2.5</baseBodySize>
		</race>
		
		<properties>
			<diagonalRotation>false</diagonalRotation>
			<defaultBiomesImpassable>true</defaultBiomesImpassable>
			<defaultTerrainImpassable>true</defaultTerrainImpassable>
			<customTerrainCosts AllowTerrainWithTag="Floor" PathCost="80">
				<li>
					<key>MJ_StructureCell</key>
					<value>1</value>
				</li>
			</customTerrainCosts>
			<winterSpeedMultiplier>0</winterSpeedMultiplier>
			<worldSpeedMultiplier>1</worldSpeedMultiplier>
			<offRoadMultiplier>1</offRoadMultiplier>
			<vehicleJobLimitations>
				<li>(RepairVehicle, 2)</li>
			</vehicleJobLimitations>
			
			<roles>
				<li>
					<key>passenger</key>
					<label>Passenger</label>
					<slots>1</slots>
				</li>
			</roles>
		</properties>
		
		<components>
			<li>
				<key>RollerSetA</key>
				<label>Roller Subassembly</label>
				<health>80</health>
				<depth>External</depth>
				<armor>
					<ArmorRating_Blunt>0.96</ArmorRating_Blunt>
					<ArmorRating_Sharp>0.72</ArmorRating_Sharp>
				</armor>
				<tags><li>Wheel</li></tags>
				<hitbox>
					<fallthrough>false</fallthrough>
					<side>Left</side>
				</hitbox>
				<categories><li>MoveSpeed</li></categories>
			</li>
			<li>
				<key>RollerSetB</key>
				<label>Roller Subassembly</label>
				<health>80</health>
				<depth>External</depth>
				<armor>
					<ArmorRating_Blunt>0.96</ArmorRating_Blunt>
					<ArmorRating_Sharp>0.72</ArmorRating_Sharp>
				</armor>
				<tags><li>Wheel</li></tags>
				<hitbox>
					<fallthrough>false</fallthrough>
					<side>Right</side>
				</hitbox>
				<categories><li>MoveSpeed</li></categories>
			</li>
			<li>
				<key>RollerSetC</key>
				<label>Roller Subassembly</label>
				<health>80</health>
				<depth>External</depth>
				<armor>
					<ArmorRating_Blunt>0.96</ArmorRating_Blunt>
					<ArmorRating_Sharp>0.72</ArmorRating_Sharp>
				</armor>
				<tags><li>Wheel</li></tags>
				<hitbox>
					<fallthrough>false</fallthrough>
					<side>Front</side>
				</hitbox>
				<categories><li>MoveSpeed</li></categories>
			</li>
			<li>
				<key>RollerSetD</key>
				<label>Roller Subassembly</label>
				<health>80</health>
				<depth>External</depth>
				<armor>
					<ArmorRating_Blunt>0.96</ArmorRating_Blunt>
					<ArmorRating_Sharp>0.72</ArmorRating_Sharp>
				</armor>
				<tags><li>Wheel</li></tags>
				<hitbox>
					<fallthrough>false</fallthrough>
					<side>Back</side>
				</hitbox>
				<categories><li>MoveSpeed</li></categories>
			</li>
			<li>
				<key>Reactor</key>
				<label>Reactor Grating</label>
				<health>210</health>
				<priorityStatEfficiency>true</priorityStatEfficiency>
				<depth>Internal</depth>
				
				<reactors>
					<li Class = "Vehicles.Reactor_Explosive">
						<indicator>VF_Explosive</indicator>
						<chance>0.25</chance>
						<radius>3</radius>
						<damageDef>Bomb</damageDef>
					</li>
				</reactors>
				<hitbox>
					<cells>
						<li>(0, 0)</li>
					</cells>
				</hitbox>
				
				<categories><li>MoveSpeed</li></categories>
			</li>
			<li>
				<key>StructureShell</key>
				<label>Structure Shell</label>
				<health>210</health>
				<depth>External</depth>
				<hitWeight>10</hitWeight>
				
				<armor>
					<ArmorRating_Blunt>1.28</ArmorRating_Blunt>
					<ArmorRating_Sharp>0.87</ArmorRating_Sharp>
				</armor>
			</li>
			<li>
				<key>Chemtank</key>
				<label>Chemtank</label>
				<health>100</health>
				<depth>Internal</depth>
				
				<reactors>
					<li Class = "Vehicles.Reactor_FuelLeak"/>
				</reactors>
				
				<hitbox>
					<cells>
						<li>(0, -1)</li>
					</cells>
				</hitbox>
			</li>
			<li>
				<key>DiagnosticTerminal</key>
				<label>Diagnostic Terminal</label>
				<health>50</health>
				<depth>Internal</depth>
				<hitWeight>5</hitWeight>
			</li>
			<li>
				<key>WirelessNode</key>
				<label>Wireless Node</label>
				<health>50</health>
				<depth>Internal</depth>
				<hitWeight>5</hitWeight>
			</li>
			<li>
				<key>Transformer</key>
				<label>Transformer</label>
				<health>50</health>
				<depth>Internal</depth>
			</li>
			<li>
				<key>StructureFrame</key>
				<label>Structure Frame</label>
				<health>110</health>
				<depth>Internal</depth>
				<hitWeight>5</hitWeight>
				
				<armor>
					<ArmorRating_Blunt>0.89</ArmorRating_Blunt>
					<ArmorRating_Sharp>1.15</ArmorRating_Sharp>
				</armor>
			</li>
		</components>

		<comps>
			<li Class="Vehicles.CompProperties_FueledTravel">
				<fuelType>Chemfuel</fuelType>
				<leakDef>Filth_Fuel</leakDef>
				<fuelConsumptionRate>50</fuelConsumptionRate>
				<fuelCapacity>20</fuelCapacity>
			</li>
			<li Class="Vehicles.CompProperties_UpgradeTree">
				<def>MJ_GenericTurret_UpgradeTree</def>
			</li>
		</comps>
	</Vehicles.VehicleDef>


<!-- Upgrade tree for vanilla-esque turrets -->

	<Vehicles.UpgradeTreeDef>
		<defName>MJ_GenericTurret_UpgradeTree</defName>
		<nodes>
			<li>
				<key>MicroTurret</key>
				<label>Mini-turret</label>
				<description>Install a mini-turret assembly.</description>
				<icon>Things/Vehicles/Shared/SharedMicroturret</icon>
				<work>1500</work>
				<gridCoordinate>(3,0)</gridCoordinate>
				<upgrades>
					<li Class="Vehicles.TurretUpgrade">
						<turrets>
							<li>
								<turretDef>SharedMicroturret</turretDef>
								<renderProperties>
									<north>(0, 0.5)</north>
									<south>(0,0.5)</south>
									<east>(0,0.5)</east>
								</renderProperties>
								<gizmoLabel>Mini-turret gun</gizmoLabel>
								<aimPieOffset>(0, 0.35)</aimPieOffset>
								<key>MicroTurret</key>
							</li>
						</turrets>
						<removeTurrets>
							<li>FoamTurret</li>
							<li>AutocannonTurret</li>
							<li>UraniumSlugTurret</li>
							<li>RocketswarmTurret</li>
						</removeTurrets>
					</li>
				</upgrades>
				<researchPrerequisites>
					<li>GunTurrets</li>
				</researchPrerequisites>
				<ingredients>
					<Steel>50</Steel>
					<ComponentIndustrial>2</ComponentIndustrial>
				</ingredients>
			</li>

			<li>
				<key>AutocannonTurret</key>
				<label>Autocannon Turret</label>
				<description>Install an autocannon assembly.</description>
				<icon>Things/Building/Security/TurretAutocannon_MenuIcon</icon>
				<work>12000</work>
				<gridCoordinate>(3,5)</gridCoordinate>
				<upgrades>
					<li Class="Vehicles.TurretUpgrade">
						<turrets>
							<li>
								<turretDef>MJ_SharedAutocannonTurret</turretDef>
