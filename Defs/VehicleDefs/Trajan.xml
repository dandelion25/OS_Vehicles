						</turrets>
						<removeTurrets>
							<li>FoamTurret</li>
							<li>MicroTurret</li>
							<li>AutocannonTurret</li>
							<li>UraniumSlugTurret</li>
						</removeTurrets>
					</li>
				</upgrades>
				<researchPrerequisites>
					<li>RocketswarmLauncher</li>
				</researchPrerequisites>
				<ingredients>
					<Steel>150</Steel>
					<Plasteel>20</Plasteel>
