				<depth>External</depth>
				<hitWeight>20</hitWeight>
				
				<armor>
					<ArmorRating_Blunt>0.89</ArmorRating_Blunt>
					<ArmorRating_Sharp>1.15</ArmorRating_Sharp>
				</armor>
			</li>
		</components>

		<comps>
			<li Class="Vehicles.CompProperties_FueledTravel">
				<fuelType>Chemfuel</fuelType>
				<leakDef>Filth_Fuel</leakDef>
				<fuelConsumptionRate>12</fuelConsumptionRate>
				<fuelCapacity>120</fuelCapacity>
				<fuelConsumptionWorldMultiplier>0.5</fuelConsumptionWorldMultiplier>
			</li>
			<li Class="Vehicles.CompProperties_VehicleLauncher">
				<launchProtocol Class="Vehicles.DefaultTakeoff">
					<launchProperties>
						<maxTicks>800</maxTicks>
						<forcedRotation>East</forcedRotation>
						
						<rotationCurve Class="SmashTools.BezierCurve">
							<points>
								<li>(0, 0)</li>
								<li>(0.5, 0)</li>
								<li>(1, -20)</li>
							</points>
						</rotationCurve>

						<xPositionCurve Class="SmashTools.BezierCurve">
							<points>
								<li>(0, 0)</li>
								<li>(0.5, 0)</li>
								<li>(0.6, 10)</li>
								<li>(0.8, 30)</li>
								<li>(1, 60)</li>
							</points>
						</xPositionCurve>
						
						<zPositionCurve Class="SmashTools.BezierCurve">
							<points>
								<li>(0, 0)</li>
								<li>(0.1, 1)</li>
								<li>(0.15, 2)</li>
								<li>(0.3, 6)</li>
								<li>(0.5, 12)</li>
								<li>(0.7, 40)</li>
								<li>(0.9, 120)</li>
								<li>(1, 250)</li>
							</points>
						</zPositionCurve>

						<fleckData><li>
							<def>DustPuff</def>
							<angle>0~360</angle>
							<runOutOfStep>false</runOutOfStep>
							<lockFleckX>false</lockFleckX>
							<originOffset>(0, 0, 0)</originOffset>
							
							<drawOffset Class="SmashTools.BezierCurve">
								<points>
									<li>(0, 0)</li>
									<li>(0.1, 1)</li>
									<li>(0.15, 2)</li>
									<li>(0.3, 6)</li>
									<li>(0.5, 12)</li>
								</points>
							</drawOffset>
							
							<frequency Class="SmashTools.BezierCurve">
								<points>
									<li>(0, 160)</li>
									<li>(0.5, 0)</li>
								</points>
							</frequency>
							
							<rotationRate>
								<points>
									<li>(0, 3)</li>
									<li>(1, 1)</li>
								</points>
							</rotationRate>
							
							<size Class="SmashTools.BezierCurve">
								<points>
									<li>(0, 4.5)</li>
									<li>(0.1, 2.64)</li>
									<li>(0.15, 1.56)</li>
									<li>(0.5, 1)</li>
								</points>
							</size>
							
							<speed>
								<points>
									<li>(0, 6)</li>
									<li>(1, 3)</li>
								</points>
							</speed>
						</li></fleckData>
					</launchProperties>
					
					<landingProperties>
						<maxTicks>800</maxTicks>
						<rotationCurve Class="SmashTools.BezierCurve">
							<points>
								<li>(0, 20)</li>
								<li>(0.5, 0)</li>
								<li>(1, 0)</li>
							</points>
						</rotationCurve>
						
						<xPositionCurve Class="SmashTools.BezierCurve">
							<points>
								<li>(0, -60)</li>
								<li>(0.2, -30)</li>
								<li>(0.4, -10)</li>
								<li>(0.5, 0)</li>
								<li>(1, 0)</li>
							</points>
						</xPositionCurve>
						
						<zPositionCurve Class="SmashTools.BezierCurve">
							<points>
								<li>(0, 250)</li>
								<li>(0.1, 120)</li>
								<li>(0.3, 40)</li>
								<li>(0.5, 12)</li>
								<li>(0.7, 6)</li>
								<li>(0.85, 2)</li>
								<li>(0.9, 1)</li>
								<li>(1, 0)</li>
							</points>
						</zPositionCurve>
						
						<fleckData><li>
							<def>DustPuff</def>
							<angle>0~360</angle>
							<runOutOfStep>false</runOutOfStep>
							<lockFleckX>false</lockFleckX>
							<originOffset>(0, 0, 0)</originOffset>
							
							<drawOffset Class="SmashTools.BezierCurve">
								<points>
									<li>(0.5, 12)</li>
									<li>(0.7, 6)</li>
