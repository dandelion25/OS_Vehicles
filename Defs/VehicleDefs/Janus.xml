					<li>
						<turretDef>OSVehicles_Janus_Turret</turretDef>
						
						<renderProperties>
							<north>(0, 1.60)</north>
							<south>(0, 1.60)</south>
							<east>(0, 1.60)</east>
						</renderProperties>
						<drawLayer>-2</drawLayer>
						
						<gizmoLabel>Janus Array</gizmoLabel>
						
						<aimPieOffset>(0, 1.6)</aimPieOffset>
						<key>mainTurret</key>
					</li>
